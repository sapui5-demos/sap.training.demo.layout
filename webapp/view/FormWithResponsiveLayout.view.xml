<mvc:View controllerName="sap.training.controller.FormWithResponsiveLayout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.ui.commons">
	<f:Form>
		<f:title>
			<core:Title text="Address Data"/>
		</f:title>
		<f:layout>
			<f:ResponsiveLayout/>
		</f:layout>
		<f:formContainers>
			<f:FormContainer>
				<f:title>
					<core:Title text="Person Data"/>
				</f:title>
				<f:formElements>
					<f:FormElement>
						<f:label>
							<Label text="Name"/>
						</f:label>
						<f:fields>
							<TextField value="Christoph"/>
							<TextField value="Knecht"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement>
						<f:layoutData>
							<l:ResponsiveFlowLayoutData linebreak="true"/>
						</f:layoutData>
						<f:label>
							<Label text="Date of Birth"/>
						</f:label>
						<f:fields>
							<DatePicker yyyymmdd="19700101">
								<layoutData>
									<l:ResponsiveFlowLayoutData weight="2"/>
								</layoutData>
							</DatePicker>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer>
				<f:title>
					<core:Title text="Company"/>
				</f:title>
				<f:formElements>
					<f:FormElement>
						<f:label><Label text="Name / Location"/></f:label>
						<f:fields>
							<TextField value="SAP SE">
								<layoutData>
									<l:ResponsiveFlowLayoutData weight="3"/>
								</layoutData>
							</TextField>
							<TextField value="69190 Walldorf (Germany)">
								<layoutData>
									<l:ResponsiveFlowLayoutData weight="5"/>
								</layoutData>
							</TextField>
						</f:fields>
					</f:FormElement>
					<f:FormElement>
						<f:layoutData>
							<l:ResponsiveFlowLayoutData linebreak="true"/>
						</f:layoutData>
						<f:label><Label text="Phone"/></f:label>
						<f:fields>
							<TextField value="+49"/>
							<TextField value="6227">
								<layoutData>
									<l:ResponsiveFlowLayoutData weight="3"/>
								</layoutData>
							</TextField>
							<TextField value="7-47474">
								<layoutData>
									<l:ResponsiveFlowLayoutData weight="4"/>
								</layoutData>
							</TextField>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</mvc:View>